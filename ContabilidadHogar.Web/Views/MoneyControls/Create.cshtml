@model ContabilidadHogar.Models.MoneyControl

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>MoneyControl</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TransactionDateTime" class="control-label"></label>
                <input asp-for="TransactionDateTime" class="form-control" />
                <span asp-validation-for="TransactionDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IncomeTransaction" /> @Html.DisplayNameFor(model => model.IncomeTransaction)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AmountTransaction" class="control-label"></label>
                <input asp-for="AmountTransaction" class="form-control" />
                <span asp-validation-for="AmountTransaction" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="BalanceTransaction" class="control-label"></label>
                <input asp-for="BalanceTransaction" class="form-control" value="0"/>
                <span asp-validation-for="BalanceTransaction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
